<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E43F3F"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="56dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:src="@drawable/logo2"
                />

            <!-- Email Label -->
            <android.support.design.widget.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                >

                <EditText
                    android:id="@+id/activity_login_input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:text="dongnt@gmail.com"
                    android:textColor="@color/md_white_1000"
                    android:textColorHighlight="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Password Label -->
            <android.support.design.widget.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                <EditText

                    android:id="@+id/activity_login_input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:text="123456"
                    android:textColor="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000"/>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/activity_login_btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#CC1D1D"
                android:padding="12dp"
                android:text="@string/activity_view_login"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activity_login_link_signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:gravity="center"
                android:text="Bạn chưa có tài khoản? Đăng ký ngay"
                android:textColor="@color/md_white_1000"
                android:textSize="16dip"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>